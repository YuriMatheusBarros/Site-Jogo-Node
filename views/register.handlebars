
 
<body id="pagina-registro">
   {{> header}}
  <main class="container-registro">
    <h1 class="titulo-registro">Registrar</h1>
    <form class="formulario-registro" action="/register" method="POST">
      <label for="nome-registro">Nome Completo</label>
      <input type="text" id="nome-registro" name="nome" required>
      <label for="email-registro">E-mail</label>
      <input type="email" id="email-registro" name="email" required>
      <label for="senha-registro">Senha</label>
      <input type="password" id="senha-registro" name="senha" required>
      <button type="submit" class="botao-registro">Cadastrar</button>
    </form>
    <p class="link-login">
      Já tem uma conta? <a href="/login">Faça login</a>
    </p>
  </main>
</body>

